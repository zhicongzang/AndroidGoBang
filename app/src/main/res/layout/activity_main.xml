<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:text="vs. AI"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:id="@+id/textViewVSAI"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/menuTextColor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.19"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="vs. Player"
        android:layout_width="0dp"
        android:id="@+id/textViewVSPlayer"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/menuTextColor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewVSAI"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_height="80dp" />

    <TextView
        android:text="WiFi Battle"
        android:layout_width="0dp"
        android:id="@+id/textViewWiFiBattle"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/menuTextColor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewVSPlayer"
        android:layout_height="80dp"
        tools:layout_editor_absoluteY="232dp" />

    <TextView
        android:text="About"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:id="@+id/textViewAbout"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/menuTextColor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWiFiBattle" />
</android.support.constraint.ConstraintLayout>